package Arrays;

import java.util.Arrays;
import java.util.Scanner;

public class DesafioArray1 {

	public static void main(String[] args) {
		
		Scanner leia = new Scanner(System.in);
		
		int nota;
		
		System.out.println("Amorzinho, quantas notas vocÃª deseja inserir?");
		nota = leia.nextInt();
		
		double[] notasAlunoA = new double[nota];
		
		System.out.println(Arrays.toString(notasAlunoA));
		
		double notas;
		for (int i=0; i<notasAlunoA.length; i++) {
			
			System.out.println("Entre com as notas, uma a uma:");
			notasAlunoA[notas] = leia.nextDouble();
		}
		
		System.out.println(Arrays.toString(notasAlunoA));
		
		double totalAlunoA = 0;
		for(double total: notasAlunoA) {
			totalAlunoA += notas;
		}
		
		System.out.println(totalAlunoA/notasAlunoA.length);
	}

}
