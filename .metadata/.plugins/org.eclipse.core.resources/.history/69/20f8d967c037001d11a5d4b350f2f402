package Arrays;

import java.util.Arrays;
import java.util.Scanner;

public class DesafioArray1 {

	public static void main(String[] args) {
		
		Scanner leia = new Scanner(System.in);
		
		int nota;
		
		System.out.println("Amorzinho, quantas notas vocÃª deseja inserir?");
		nota = leia.nextInt();
		
		double[] notasAlunoA = new double[nota];
		
		System.out.println(Arrays.toString(notasAlunoA));
		
		for(double notas: notasAlunoA) {
			
			System.out.println("Entre com as notas, uma a uma:");
			notas = leia.nextDouble(notas);
		}
		
		System.out.println(Arrays.toString(notasAlunoA));
	}

}
