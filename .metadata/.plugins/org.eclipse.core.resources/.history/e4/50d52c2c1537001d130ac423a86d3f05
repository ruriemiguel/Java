package Arrays;

import java.util.Arrays;

public class Exercicio {

	public static void main(String[] args) {

		double[] notasAlunoA = new double[3];

		System.out.println(Arrays.toString(notasAlunoA));
		
		notasAlunoA[0] = 7.5;
		notasAlunoA[1] = 8.2;
		notasAlunoA[2] = 9.3;
		
				
		System.out.println(Arrays.toString(notasAlunoA));
		
		double total = 0;
		for(int i = 0; i < 3; i++) {
			
			total += notasAlunoA[i];
		}
		
		double media;
		media = total/3;
		
		System.out.printf("%.2f",media);
	}

}
